        </div>
        <form #f="ngForm" (ngSubmit)="register(f)">
          <div class="form-group">
            <label class="label" for="username">Username</label>
            <input [ngModel] name="username" type="text" class="form-control" placeholder="Nome" required id="name"
              #name="ngModel" />
            <small [style.visibility]="
                name.invalid && (name.dirty || name.touched)
                  ? 'visible'
                  : 'hidden'
              " class="form-text text-danger">Campo obbligatorio</small>
          </div>
          <div class="form-group">
            <label class="label" for="email">eMail</label>
            <input [ngModel] name="email" type="text" class="form-control" placeholder="eMail" required id="surname"
              #surname="ngModel" />
            <small [style.visibility]="
                surname.invalid && (surname.dirty || surname.touched)
                  ? 'visible'
                  : 'hidden'
              " class="form-text text-danger">Campo obbligatorio</small>
          </div>

          
          <div class="form-group">
            <label class="label" for="fazione">Fazione</label>
            <select name="team" id="fazione"  *ngIf="bEnabled || rEnabled" [ngModel] class="form-control" required>
              <option value="Atene" *ngIf="bEnabled"> Atene </option>
              <option value="Sparta" *ngIf="rEnabled"> Sparta </option>
            </select>
          <div>
            <div>
              <div *ngIf="bEnabled && !rEnabled" >Atene ha bisogno di te!</div>
              <div *ngIf="rEnabled && !bEnabled ">Sparta ha bisogno di te!</div>
            </div>
              
            </div>
          </div>




